{{#each this}}
<li class="heroes__item">
    <img src="{{this.images.lg}}" alt="{{this.name}}" class="heroes__picture">
    <div class="heroes__content">
        <h2 class="heroes__name">{{this.name}}</h2>
        <ul class="heroes__biography list">
            <li class="heroes__biography-item"><p class="heroes__gender"><strong>Gender: </strong> {{this.appearance.gender}}</p></li>
            {{#if this.biography.alterEgos}}
            <li class="heroes__biography-item"><p class="heroes__alter-egos"><strong>Alter Egos: </strong> {{this.biography.alterEgos}}</p></li>
            {{/if}}
            {{#unless this.biography.alterEgos}}
            <li class="heroes__biography-item"><p class="heroes__alter-egos"><strong>Alter Egos: </strong> -</p></li>
            {{/unless}}
        </ul>
    </div>
</li>
{{/each}}
